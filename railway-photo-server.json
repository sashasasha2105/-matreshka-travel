{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python310"]
        },
        "install": {
          "cmds": ["pip install -r requirements_photo_server.txt"]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "gunicorn photo_server:app --bind 0.0.0.0:$PORT --workers 2",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
